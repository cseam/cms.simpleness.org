#!/usr/bin/perl

use strict;

my $output = '';

$main::CONFIG->{cache} = 1;   # cache this module
$main::CONFIG->{cache_time} = 1;    # set cache time to 1 sec

{
    
    '/rss' => sub {
        $main::header = "Content-type: text/xml";
        $main::template->process('xml/rss.tpl', { %$main::tt, }, \$output );
        return $output;
    },

};
