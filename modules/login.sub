                $db->sql("INSERT INTO base_users_recover (user_id, recover) VALUES (?,?)", $r->[0]{user_id}, $recover);
                my $message;
                $template->process('messages/recover.tpl', { %$tt, name=>$r->[0]{user_name}, url=>'/login/recover/'.$recover, }, \$message );
